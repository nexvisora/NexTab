<div class="row">
    <div class="col-12">
        <div class="mb-4">
            <a href="/" class="btn btn-link text-muted px-0">
                <i class="fas fa-arrow-left me-2"></i>Back to Articles
            </a>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0"><%= article.title %></h1>
                    <div class="btn-group">
                        <a href="/<%= article.slug %>/edit" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <form action="/<%= article.slug %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger ms-2">
                                <i class="fas fa-trash-alt me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
                <div class="article-meta mb-4">
                    <div>
                        <i class="fas fa-calendar"></i>
                        <span>Created <%= new Date(article.createdAt).toLocaleDateString() %></span>
                    </div>
                    <div class="ms-3">
                        <i class="fas fa-clock"></i>
                        <span>Updated <%= new Date(article.updatedAt).toLocaleDateString() %></span>
                    </div>
                </div>
                <div class="article-content">
                    <%- article.markdownToHtml() %>
                </div>
            </div>
        </div>
    </div>
</div>
