<%- include('layout') %>

<div class="row">
    <div class="col-12">
        <h1>Articles</h1>
        <% if (articles.length === 0) { %>
            <p>No articles yet. Why not create one?</p>
        <% } else { %>
            <div class="list-group mt-4">
                <% articles.forEach(article => { %>
                    <a href="/<%= article.slug %>" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1"><%= article.title %></h5>
                            <small><%= new Date(article.createdAt).toLocaleDateString() %></small>
                        </div>
                    </a>
                <% }) %>
            </div>
        <% } %>
    </div>
</div>

<a href="/new" class="btn btn-primary btn-lg btn-floating">
    <i class="fas fa-plus"></i> New Article
</a>
