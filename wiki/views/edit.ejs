<div class="row">
    <div class="col-12">
        <div class="mb-4">
            <a href="/<%= article.slug %>" class="btn btn-link text-muted px-0">
                <i class="fas fa-arrow-left me-2"></i>Back to Article
            </a>
        </div>
        <div class="card">
            <div class="card-body">
                <h1><i class="fas fa-edit me-2"></i>Edit Article</h1>
                <form action="/<%= article.slug %>?_method=PUT" method="POST">
                    <%- include('_form_fields') %>
                    <div class="mt-4">
                        <a href="/<%= article.slug %>" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
