<div class="form-group mb-4">
    <label for="title" class="form-label">Title</label>
    <input required type="text" name="title" id="title" class="form-control" 
           value="<%= article.title %>" placeholder="Enter article title">
    <div class="form-text">Choose a descriptive title for your article</div>
</div>
<div class="form-group mb-4">
    <label for="content" class="form-label">Content</label>
    <div class="form-text mb-2">
        <i class="fas fa-markdown me-1"></i>
        Markdown formatting supported
    </div>
    <textarea required name="content" id="content" class="form-control" 
              rows="12" placeholder="Write your article content here..."><%= article.content %></textarea>
</div>
